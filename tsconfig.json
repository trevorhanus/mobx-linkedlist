{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "sourceMap": true,
        "pretty": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015",
            "es2015.collection",
            "es2015.promise"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}